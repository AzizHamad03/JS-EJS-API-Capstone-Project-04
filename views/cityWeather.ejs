<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<%- include('partials/header.ejs') %>
<div class="cityBody">
    <h2 class="cityTitle"><%= data.city_name %> Weather</h2>
    <div class="cityInfo">
        <div id="myCarousel" class="carousel slide tempDiv" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item">
                <div class="container flexInnerTempDiv">
                    <h3>Temperature</h3>
                    <p><%= Math.round( ((data.temp * 9/5) + 32) * 10) / 10 %> °F</p>
                </div>
              </div>
              <div class="carousel-item active ">
                <div class="container flexInnerTempDiv">
                    <h3>Temperature</h3>
                    <p><%=data.temp %> °C<p>
                </div>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        <div class="regularDataDiv">
            <h3>Humidity</h3>
            <p><%=data.rh %> %<p>
        </div>
        <div class="windDiv">
            <div>
                <h3>Wind Speed</h3>
                <p><%=data.wind_spd %> m/s <p>
            </div>
            <img src="images/windImage2.png" alt="windImage">
        </div>
        <div class="regularDataDiv">
            <h3>Pressure</h3>
            <p><%=data.pres %> mb<p></p>
        </div>

    </div>
    <form action="/cityWeather" method="post">
        <input type="search" class="searchBar" name="city" placeholder="Search for different City...">
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</div>
<%- include('partials/footer.ejs') %>
